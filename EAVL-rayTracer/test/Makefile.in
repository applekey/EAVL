@VARIABLES@

ifneq (@VTK@, no)
VTKTESTS=testvtk
endif

ifneq (@MESA@, no)
RENDERTESTS=testrender
endif

ifneq (@ADIOS@, no)
ADIOSTESTS=testxgc
endif

TESTS = testimport testiso testnormal testrecenter testthreshold testbox testmath testdatamodel testxform testbin testdistancefield testgraphlayout testatompipeline testserialize testray testsort testvolume $(ADIOSTESTS)  $(RENDERTESTS) $(VTKTESTS)

OBJ = $(TESTS:=.o)
LIBDEP=$(TOPDIR)/lib/$(LIB_NAME)

all: $(TESTS)
	@echo ""
	@echo "Run 'make check' to run validation tests."
	@echo ""

check test: $(LIBDEEP) $(TESTS)
	@if test -z `which python`; then \
	   echo "Warning; need python to run full test suite"; \
	else \
	   echo "== Running tests =="; \
	   python runtest.py; \
	fi

